@startuml 

class Vehiculo {
  + id: String
  + capacidad: int
  + tipo: String
  + estado: String
}

class Conductor {
  + nombre: String
  + licencia: String
}

class Pasajero {
  + metodoDePago: String
  + tarjetaAbono: Tarifa
}

class Tarifa {
  + tipoDeAbono: String
  + precio: double
}

class Ruta {
  + id: String
  + horario: Horario
  + paradas: List<Parada>
}

class Parada {
  + ubicacion: String
  + tiempoParada: String
}

class Horario {
  + horaInicio: String
  + horaFin: String
}

class Incidencia {
  + tipo: String
  + descripcion: String
  + fecha: Date
}

class Flota {
  + vehiculos: List<Vehiculo>
  + conductores: List<Conductor>
}

class Servicio {
  + vehiculo: Vehiculo
  + ruta: Ruta
}

